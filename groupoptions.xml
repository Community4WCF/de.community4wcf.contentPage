<?xml version="1.0" encoding="UTF-8"?>
<!-- $Id: groupoptions.xml 1460 2010-05-23 14:58:35Z TobiasH87 $ -->
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com/XSD/group-options.xsd">
	<import>
		<categories>
			<category name="user.content.page">
				<parent>user</parent>
			</category>
			
			<category name="mod.content.page">
				<parent>mod</parent>
			</category>
		</categories>
		
		<options>
			<option name="user.contentPage.canViewContentPage">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.contentPage.canAddContentPage">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="user.contentPage.canDownloadAttachment">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.contentPage.canViewAttachmentPreview">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.contentPage.canUploadAttachment">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>user.contentPage.maxAttachmentSize,user.contentPage.allowedAttachmentExtensions,user.contentPage.maxAttachmentCount</enableoptions>
			</option>
			<option name="user.contentPage.maxAttachmentSize">
				<categoryname>user.content.page</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5000000</defaultvalue>
			</option>
			<option name="user.contentPage.allowedAttachmentExtensions">
			<categoryname>user.content.page</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue><![CDATA[gif
jpg
jpeg
png
gif
bmp
zip
txt
xml
tar
gz
doc
xls
css
pdf]]></defaultvalue>
			</option>
			<option name="user.contentPage.maxAttachmentCount">
				<categoryname>user.content.page</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5</defaultvalue>
			</option>
			
			<option name="user.contentPage.canVotePoll">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="user.contentPage.canStartPoll">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>user.contentPage.canStartPublicPoll</enableoptions>
			</option>
			<option name="user.contentPage.canStartPublicPoll">
				<categoryname>user.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>

			<option name="mod.contentPage.canEditContentPage">
				<categoryname>mod.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="mod.contentPage.canDeleteContentPage">
				<categoryname>mod.content.page</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
		</options>
	</import>
</data>